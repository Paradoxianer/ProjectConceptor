SubDir HAIKU_TOP 3rdparty projectconceptor src app ;

#SetSubDirSupportedPlatformsBeOSCompatible ;

# for BRecentItems
#UsePublicHeaders [ FDirName be_apps Tracker ] ;

#svnupdate
actions snvupdate
{
	echo "---------SVN INFO GEN-----------"
	touch About/AboutSvnInfo.h
	rm About/AboutSvnInfo.h
	echo "" >> About/AboutSvnInfo.h
	echo "#ifndef SVN_INFO_H" >> About/AboutSvnInfo.h
	echo "#define SVN_INFO_H" >> About/AboutSvnInfo.h
	echo "" >> About/AboutSvnInfo.h
	echo "//do not edit this" >> About/AboutSvnInfo.h
	echo " #define SVN_REV_STR " \"`svn info | grep Revision | awk '{print $2}'` >> About/AboutSvnInfo.h \"
	echo "" >> About/AboutSvnInfo.h
	echo "#endif" >> About/AboutSvnInfo.h
	echo "UPDATED"
	echo "--------------------------------"
}

snvupdate ;

# source directories
local sourceDirs =
	About
	Commands
	Config
	Document
	plugins
	ToolBar
	Tools
	Tools/tinyxml
;

local sourceDir ;
for sourceDir in $(sourceDirs) {
	SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) 3rdparty projectconceptor src app $(sourceDir) ] ;
}

SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) 3rdparty projectconceptor src include ] ;
SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) 3rdparty projectconceptor src include plugins ] ;
SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) 3rdparty projectconceptor src include tinyxml ] ;


PROJECT_CONCEPTOR_SOURCES =
	MainView.cpp
	ProjectConceptor.cpp

	# About
	AboutWindow.cpp
	AboutView.cpp
	AboutURLView.cpp

	# Config
	ConfigWindow.cpp
	ConfigView.cpp
	BoolItem.cpp
	ColorItem.cpp
	FloatItem.cpp
	FontItem.cpp
	MessageView.cpp
	PatternItem.cpp
	RectItem.cpp
	MessageItem.cpp
	StringItem.cpp

	# Commands
	PCommand.cpp
	PCommandManager.cpp

	# Document
	PDocument.cpp
	PDocumentManager.cpp
	PEditor.cpp
	PEditorManager.cpp
	PWindow.cpp
	HelpManager.cpp

	# plugins
	BasePlugin.cpp
	PluginManager.cpp

	# ToolBar
	BaseItem.cpp
	Mover.cpp
	ToolBar.cpp
	ToolBarSeperator.cpp
	ToolItem.cpp
	ToolMenu.cpp
	ColorToolItem.cpp
	FloatToolItem.cpp
	PatternToolItem.cpp

	# Tools
	AFont.cpp
	BViewSplitter.cpp
	Divider.cpp
	PCSavePanel.cpp
	PDocLoader.cpp
	Indexer.cpp
	InputRequestView.cpp
	InputRequest.cpp
	ShortCutFilter.cpp
	TextViewCompleter.cpp

	# Tools/tinyxml

	tinystr.cpp
 	tinyxml.cpp
 	tinyxmlerror.cpp
	tinyxmlparser.cpp
;
Application ProjectConceptor :
	$(PROJECT_CONCEPTOR_SOURCES)
	: be root translation tracker $(TARGET_LIBSTDC++)
	: ProjectConceptor.rsrc Tools/InputRequest.rsrc
;

StaticLibrary libprojectconceptor.a :
	$(PROJECT_CONCEPTOR_SOURCES)
;



